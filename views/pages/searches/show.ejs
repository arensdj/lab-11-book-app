<!DOCTYPE html>
<html>
    <%- include('../layout/head') -%>
  <body>
      <%- include('../layout/header') -%>
  <main>
    <% bookSummary[0].forEach(item => { %>
    <div class="bookEntry">
      <img src=<%= item.image %>></img>
      <h4 class="bookTitle"> <%= item.title %> </h4>
      <h5 class="bookAuthor"> <%= item.author %></h5>
      <p class="bookDesc"> <%= item.description %></p>
      <button class="bookSelect">Select This book</button>

      <form class="hiddenForm" action="/" method="put" hidden=true>
        <fieldset>
          <label for="title">
            <span>Title</span>
            <input type="text" name="title"  placeholder= <%= item.title %> >
          </label>
        </fieldset>
        <fieldset>
            <label for="author">
              <span>Author</span>
              <input type="text" name="author" placeholder=<%= item.author %>>
            </label>
          </fieldset>
          <fieldset>
              <label for="description">
                <span>Description</span>
                <input type="text" name="description"  placeholder=<%= item.description %>>
              </label>
            </fieldset>
            <fieldset>
                <label for="description">
                  <span>Bookshelf</span>
                  <input type="text" name="bookshelf">
                </label>
              </fieldset>
        <button type="submit">Update Details</button>
      </form>
      </div>
      <% }); %>
            
  </main>
  <%- include('../layout/footer') -%>
</body>
</html>