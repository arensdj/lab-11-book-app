<!DOCTYPE html>
<html>
  <%- include('./layout/head') -%>
  <body>
      <%- include('./layout/header') -%>
      <p><%= results.length %> books in the collection.</p>
    <main class="main-container">
      <% results.forEach(item => { %>
        <div class="bookEntry">
          <img src="<%= item.image_url %>"></img>
          <h4 class="bookTitle"> <%= item.title %> </h4>
          <h5 class="bookAuthor"> <%= item.author %></h5>
          <p class="bookDesc"> <%= item.description %></p>
        </div>
      <% }); %>
    </main>
  </body>
</html>
