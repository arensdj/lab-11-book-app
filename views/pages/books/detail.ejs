<div class="bookEntry">
    <a href="/books/<%= item.id %>">
      <img src=<%= item.image_url %>></img>
      <h4 class="bookTitle"> <%= item.title %> </h4>
      <h5 class="bookAuthor"> <%= item.author %></h5>
      <p class="bookDesc"> <%= item.description %></p>
    </a>
    <button class="bookSelect">Select This book</button>

    <form class="hiddenForm" action="/books" method="post" hidden=true>
      <fieldset>
        <label for="image_url">
          <span>Image URL</span>
          <input type="text" name="image_url" value= "<%= item.image_url %>">
        </label>
      </fieldset>
      <fieldset>
        <label for="title">
          <span>Title</span>
          <input type="text" name="title"  value= "<%= item.title %>">
        </label>
      </fieldset>
      <fieldset>
          <label for="author">
            <span>Author</span>
            <input type="text" name="author" value="<%= item.author %>">
          </label>
        </fieldset>
        <fieldset>
            <label for="description">
              <span>Description</span>
              <input type="text" name="description"  value="<%= item.description %>">
            </label>
          </fieldset>
          <fieldset>
              <label for="description">
                <span>Bookshelf</span>
                <input type="text" name="bookshelf" required>
              </label>
            </fieldset>
      <button type="submit">Update Details</button>
    </form>
  </div>