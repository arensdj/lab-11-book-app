<h2 class="view-title"> <%- 'update' === formAction ? "Update Book:" : "Add a Book:" %></h2>
<form class="bookForm" action="<%= 'update' === formAction ? `/books/${item.id}` : '/books' %>" method="post" >
  <input type="hidden" name="_method" value="<%- 'update' === formAction ? 'put' : 'post' %>">
    <fieldset>
      <label for="image_url">
        <span>Image URL: </span>
        <input type="text" name="image_url" value= "<%= item.image_url %>">
      </label>
    </fieldset>
    <fieldset>
      <label for="title">
        <span>Title: </span>
        <input type="text" name="title"  value= "<%= item.title %>">
      </label>
    </fieldset>
    <fieldset>
      <label for="author">
        <span>Author: </span>
        <input type="text" name="author" value="<%= item.author %>">
      </label>
    </fieldset>
    <fieldset>
      <label for="isbn">
        <span>Isbn: </span>
        <input type="text" name="isbn" value="<%= item.isbn %>">
      </label>
    </fieldset>
    <fieldset>
        <label for="description">
          <span>Description: </span>
          <input type="text" name="description"  value="<%= item.description %>">
        </label>
    </fieldset>
    

    <% if ('get' === formAction) { %>
      <fieldset>
          <label for="bookshelf">
            <span>Bookshelf</span>
            <input type="text" name="bookshelf" required>
          </label>
      </fieldset>
      <% } else if ( bookshelves.length ) { %>
        <select name="bookshelf" id="">
          <% bookshelves.forEach(shelf => { %>
            <% let selected = ( item.bookshelf === shelf.bookshelf ) ? 'selected' : ''; %>
          <option value="<%= shelf.bookshelf %>" <%= selected %> >
            <%= shelf.bookshelf %>
          </option>

        <% }) %>
        </select>
    <% } %>
    <button type="submit"> <%- 'update' === formAction ? "Update Database" : "Add a Book" %> </button>
  </form>
